- @careers.shuffle[(@start)..(@start + 4)].each do |career|
  .row
    .small-10.columns
      .section-container.accordion{ :'data-section' => 'accordion' }
        %section.section
          %p.title= link_to(career.title.gsub('"',''), '#')
          .content
            = render partial: 'career_summary', locals: { career: career }
    .small-2.columns
      - unless @auth.careers.include?(career)
        .job-nav.add{ :'data-career-id' => career.id }= image_tag('/assets/bookmark.svg')
