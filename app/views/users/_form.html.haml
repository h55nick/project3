.index-form
  .row{ :style => 'padding: 15px 30px 30px;'}
    .large-12.columns
      %h2 Register
      = form_for @user, :remote => true do |f|
        .row
          .large-4.columns
            = f.label :first, "First Name"
            = f.text_field :first
          .large-4.columns
            = f.label :last, "Last Name"
            = f.text_field :last
          .large-4.columns
            = f.label :email
            = f.text_field :email
        .row
          .large-6.columns
            = f.label :location
            = f.text_field :location, placeholder: 'City, State'
          .large-6.columns
            = f.label :education
            = f.text_field :education
        .row
          .large-6.columns
            = f.label :password
            = f.password_field :password
          .large-6.columns
            = f.label :password_confirmation, 'Password Confirmation'
            = f.password_field :password_confirmation
        .row
          .large-12.columns
            = f.submit nil, :class => 'button'
            = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button secondary right')