.row
  .large-10.columns.large-centered
    .row
      .large-4.columns.dash-block
        %h2= "#{@user.first} #{@user.last}"
        %h4
          = @user.email
        %h4
          = @user.education
        %h4
          %strong Completed:
          = "#{((@user.questions.length.to_f / Question.all.length) * 100).to_i}%"
      .large-4.columns.dash-block
        %ul
          %h2 Top 3 Interests
          - if @user.ready_for_graph
            - @user.get_top_interests[0..2].each do |interest|
              %li
                %h4= interest.capitalize
          - else
            %li
              %h4 Need more data!

      .large-4.columns.dash-block
        %canvas{ id: 'canvas', height: 250, width: 250 }
          - if @user.ready_for_graph
            %script
              = "var doughnutData = [ { value: #{@user.interest.realistic}, color: '#FF2151' }, { value: #{@user.interest.investigative}, color: '##{ @user.show_color('investigative') ? 'FCE9C8' : 'EFEFEF'}' }, { value: #{@user.interest.artistic}, color: '##{ @user.show_color('artistic') ? 'FF7B29' : 'EFEFEF' }' }, { value: #{@user.interest.social}, color: '##{ @user.show_color('social') ? '8B77B5' : 'EFEFEF' }' }, { value: #{@user.interest.enterprising}, color: '#FFC629' }, { value: #{@user.interest.conventional}, color: '#4D5360' } ];"
          - else
            %script
              var doughnutData = [ { value: 10, color: '#EFEFEF' }, { value: 10, color: '#DDDDDD' }, { value: 10, color: '#EFEFEF' }, { value: 10, color: '#DDDDDD' }, { value: 10, color: '#EFEFEF' }, { value: 10, color: '#DDDDDD' } ];
          %script
            var myDoughnut = new Chart(document.getElementById("canvas").getContext("2d")).Doughnut(doughnutData);
