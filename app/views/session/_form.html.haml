.sign-in-form
  .row{ :style => 'padding: 15px 30px 30px;'}
    .large-12.columns
      %h2 Login
      = form_tag '/login' do
        = label_tag 'Email'
        = text_field_tag 'email', nil, :autofocus => true
        = label_tag 'Password'
        = password_field_tag 'password'
        = submit_tag 'Login!', :class => 'button'
        = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button secondary right')