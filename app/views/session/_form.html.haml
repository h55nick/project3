.sign-in-form
  .row{ :style => 'padding: 15px 30px 30px;'}
    .large-8.columns.large-centered
      .row
        .large-12.columns
          = form_tag '/login' do
            = text_field_tag 'email', nil, :placeholder => 'email', :autofocus => true
            = password_field_tag 'password', nil, :placeholder => 'password'
            .row
              .large-6.columns
                = submit_tag 'Login!', :class => 'button'
              .large-6.columns
                =link_to("LinkedIn",oauth_login_path, :class=>'button linkedin_login')